@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <script>
                            setTimeout(() => {
                                window.location.href = '@Url.Content("~/Menu")';
                            }, 2000);
                        </script>
                    }

                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="User.Email" class="form-control" placeholder="Email address" />
                            <label for="User_Email">Email address</label>
                            <span asp-validation-for="User.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="User.Password" type="password" class="form-control" placeholder="Password" />
                            <label for="User_Password">Password</label>
                            <span asp-validation-for="User.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="User.RememberMe" class="form-check-input" />
                            <label class="form-check-label" for="User_RememberMe">Remember me</label>
                        </div>

                        <div class="d-grid">
                            
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill" >Log in</button>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
